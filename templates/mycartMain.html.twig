{% include "header.html.twig" %}
{% include "navigation.html.twig" %}
<main class="Site-content">
    <section class="Section">
        <div class="Container">
            <h2 class="Section-heading">My Cart</h2>
            <div id="messages"></div>
            <form method="post">
                <div class="InputCombo Grid-full">
                    {% include "tablestyles.html.twig" %}
                    <table>
                        <tr>
                            <th>PID</th>
                            <th>Product_name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                        </tr>
                        {% if pageArray is defined %}
                        {% for key, value in pageArray %}
                            <tr>
                                <td>{{ pageArray[key]['product_idproduct'] }}</td>
                                <td>{{ pageArray[key]['product_namey'] }}</td>
                                <td>{{ pageArray[key]['price'] }}</td>
                                <td><input type="number" min="0" max="999" id="{{ pageArray[key]['product_idproduct'] }}" name="quantity" value="{{ pageArray[key]['quantity'] }}" class="input_qty" /></td>
                            </tr>
                        {% else %}
                            <tr>
                                <td> No Products in Cart </td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                            </tr>
                        {% endfor %}
                        {% endif %}
                    </table>
                </div>
                {% if not(pageArray is empty) %}
                    <div id="checkout" class="Grid-full">
                        <a href="checkout.php"  class="Button u-spaceLM">Go to Checkout</a>
                    </div>
                {% endif %}
            </form>
        </div>
    </section>
</main>
{% include "footer.html.twig" %}